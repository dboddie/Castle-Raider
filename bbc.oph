show_bank1:

    lda #12
    sta $fe00
    lda #$06
    sta $fe01
    lda #13
    sta $fe00
    lda #$00
    sta $fe01

    lda #0              ; Use 0 and 1 for banks 1 and 2.
    sta bank_number

    rts

show_bank2:

    lda #12
    sta $fe00
    lda #$0b
    sta $fe01
    lda #13
    sta $fe00
    lda #$00
    sta $fe01

    lda #1              ; Use 0 and 1 for banks 1 and 2.
    sta bank_number

    rts
