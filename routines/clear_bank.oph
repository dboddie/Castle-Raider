; clear_bank:

    lda #$00
    sta $70
    ldy #0

    clear_bank_loop:

        lda #0
        sta ($70),y

        lda $70
        adc #1
        sta $70
        lda $71
        adc #0
        sta $71
        clc

        cmp $72
        bne clear_bank_loop

    clc
    rts

