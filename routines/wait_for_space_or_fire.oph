; wait_for_space_or_fire:

    ; Wait for the SPACE key or fire button to be pressed.
    wait_for_space_or_fire_loop:

        jsr read_joystick_fire

        lda #1
        bcs wait_for_space_or_fire_exit

        ldx #157            ; (SPACE)
        jsr check_key
        bne wait_for_space_or_fire_loop

    wait_for_space_or_fire_exit:

    clc
    rts
